<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    android:padding="@dimen/_10sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.uconnekt.ui.individual.fragment.IndiFilterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/area_of_specialtys"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/darkgray"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_down_arrow"
                android:layout_alignParentRight="true" />

            <Spinner
                android:id="@+id/sp_for_specialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/image"
                android:background="@color/transparent"
                android:dropDownVerticalOffset="@dimen/_30sdp"
                android:dropDownWidth="@dimen/_270sdp"
                android:gravity="center"
                android:spinnerMode="dropdown"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/darkgray"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_for_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_rating"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_gravity="bottom"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_gravity="center|left"
            android:isIndicator="false"
            android:progressTint="@color/yellow"
            android:numStars="5"
            android:stepSize="0.5" />


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/darkgray"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_down_arrow"
                android:layout_alignParentRight="true" />

            <Spinner
                android:id="@+id/sp_for_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/image2"
                android:background="@color/transparent"
                android:dropDownVerticalOffset="@dimen/_30sdp"
                android:dropDownWidth="@dimen/_270sdp"
                android:gravity="center"
                android:spinnerMode="dropdown"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:id="@+id/layout_for_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_for_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:singleLine="true"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/location"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/montserrat_regular"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/location"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_map_place" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_for_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:text="@string/search"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/button_bg"/>

</LinearLayout>
