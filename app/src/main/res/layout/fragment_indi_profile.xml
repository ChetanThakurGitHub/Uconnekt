<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:background="@color/white"
    tools:context="com.uconnekt.ui.individual.fragment.IndiProfileFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@color/yellow"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_below="@+id/profile"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_minus60sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_for_share"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_share_yellow"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_for_chat"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_chat_profile"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/iv_for_fullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/Black"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/tv_for_businessName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/darkgray"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                         android:maxLines="2"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/tv_for_specializationName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightgray"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/tv_for_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightgray"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                          android:layout_gravity="center"
                            android:orientation="horizontal">


                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progressTint="@color/yellow"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:layout_gravity="center"
                                style="@style/AppThemeRatingBar" />

                            <TextView
                                android:id="@+id/tv_for_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/lightgray"
                                android:fontFamily="@font/montserrat_light" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                app:cardElevation="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_17sdp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_for_favourite"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    app:srcCompat="@drawable/ic_like_blank"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:id="@+id/tv_for_favofite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:hint="@string/hints"
                                android:textSize="@dimen/_11sdp"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_for_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                app:cardElevation="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_17sdp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_star"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rate"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/_11sdp"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                app:cardElevation="@dimen/_1sdp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_17sdp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/iv_for_recommend"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_like"/>

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:id="@+id/tv_for_recomend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/_11sdp"
                                android:hint="@string/_0_recommend"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_for_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_below="@+id/cardview"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_me"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/darkgray"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/tv_for_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/lightgray"
                    android:fontFamily="@font/montserrat_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_of_specialtys"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:id="@+id/tv_for_aofs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/lightgray"
                        android:fontFamily="@font/montserrat_regular" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_below="@+id/card_for_info"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_for_reviewList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:id="@+id/tv_for_noReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_reviews_found"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"
                        android:textColor="@color/lightgray"
                        android:layout_below="@+id/tv_for_reviewList"
                        android:fontFamily="@font/montserrat_regular"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_for_reviewList"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:cardCornerRadius="@dimen/_45sdp"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/_3sdp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_60sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_company_logo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/user"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
