<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_for_rememberHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dailog_bg_top">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/change_password_"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_for_close"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:tint="@color/yellow"
            android:background="@drawable/circle_for_cross_bg"
            app:srcCompat="@drawable/ic_cross" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewonly"
        android:layout_marginTop="@dimen/_minus35sdp"
        android:background="@drawable/dailog_bg"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white">

            <EditText
                android:id="@+id/et_for_oldPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@null"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="@color/darkgray"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:hint="@string/old_password" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white">

            <EditText
                android:id="@+id/et_for_newPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:singleLine="true"
                android:ellipsize="end"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/darkgray"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:hint="@string/new_password" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white">

            <EditText
                android:id="@+id/et_for_cPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/darkgray"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:hint="@string/confirm_password" />

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_for_save"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sdp"
            android:text="@string/save"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_medium"
            android:background="@drawable/button_bg"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewonly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_for_rememberHeader">

        <View
            android:layout_width="match_parent"
            android:background="@color/yellow"
            android:layout_height="@dimen/_30sdp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:srcCompat="@drawable/ic_locked"
            android:tint="@color/white"
            android:background="@drawable/circle_yellow_bg"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>
