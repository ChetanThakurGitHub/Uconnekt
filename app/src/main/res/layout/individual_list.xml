<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_for_list"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="@dimen/_70sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/new_app_ico"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_company_logo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/user"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/iv_for_fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chetan Thakur "
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/ratingBar"
                        android:textColor="@color/Black"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:ellipsize="end"
                        android:scrollHorizontally="true"
                        android:textSize="@dimen/_14sdp"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:progressTint="@color/yellow"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:rating="4"
                        style="@style/AppThemeRatingBar" />

                  <!--  <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/RatingBarGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:rating="0"
                        android:numStars="5"
                        android:layout_alignParentRight="true"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:stepSize="0.1"
                        android:fitsSystemWindows="true"
                        android:isIndicator="true"/>-->

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_for_businessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/lightgray"
                    android:fontFamily="@font/montserrat_regular"
                    android:scrollHorizontally="true"
                    android:text="Business Development Manager"/>

                <TextView
                    android:id="@+id/tv_for_specializationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lightgray"
                    android:fontFamily="@font/montserrat_light"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:textSize="@dimen/_11sdp"
                    android:text="72/2 skdjfklds lkjkljkl lkjkj kjkjk jkjkj kjk"/>

                <TextView
                    android:id="@+id/tv_for_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lightgray"
                    android:fontFamily="@font/montserrat_light"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:textSize="@dimen/_11sdp"
                    android:text="72/2 skdjfklds lkjkljkl lkjkj kjkjk jkjkj kjk"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>