<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/seagreen">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_backIco"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_left_arrow_white"
        android:padding="@dimen/_5sdp" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_view"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_eye"
        android:padding="@dimen/_3sdp" />

    <TextView
        android:id="@+id/tv_for_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_filter"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        app:srcCompat="@drawable/ic_filter"
        android:padding="@dimen/_5sdp"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_circular_arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        app:srcCompat="@drawable/ic_circular_arrow"
        android:padding="@dimen/_5sdp"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_menu"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_menu"
        android:padding="@dimen/_2sdp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_share"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_share_white"
        android:padding="@dimen/_5sdp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_edit"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_edit"
        android:padding="@dimen/_6sdp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_for_download"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_download_arrow"
        android:padding="@dimen/_6sdp" />

</RelativeLayout>