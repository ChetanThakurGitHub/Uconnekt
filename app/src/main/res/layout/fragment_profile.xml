<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:background="@color/white"
    tools:context=".ui.employer.fragment.MyProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@color/yellow"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_below="@+id/profile"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_minus60sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/tv_for_fullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/Black"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/tv_for_businessName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/darkgray"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/tv_for_jobTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightgray"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <TextView
                            android:id="@+id/tv_for_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightgray"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:scrollHorizontally="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:orientation="horizontal">


                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progressTint="@color/yellow"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:layout_gravity="center"
                                style="@style/AppThemeRatingBar" />

                            <TextView
                                android:id="@+id/tv_for_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:text="@string/reviews"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:textColor="@color/lightgray"
                                android:fontFamily="@font/montserrat_light" />

                            <TextView
                                android:id="@+id/tvReviewBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_below="@+id/framlayout"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:background="@drawable/circle_batch_bg"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:id="@+id/layoutData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_80sdp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_for_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                    <TextView
                        android:id="@+id/tv_for_favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_0"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/montserrat_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favourites"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_minus8sdp"
                        android:textColor="@color/lightgray"
                        android:fontFamily="@font/montserrat_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_gravity="end|bottom"
                        android:background="@color/yellow"/>

                </android.support.v7.widget.CardView>

                   <TextView
                       android:id="@+id/tvFacouriteBudge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_alignParentRight="true"
                        android:elevation="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                       android:layout_marginTop="@dimen/_2sdp"
                       android:visibility="gone"
                        android:textColor="@color/white"
                        android:background="@drawable/circle_batch_bg"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_80sdp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_for_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_for_recomend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/darkgray"
                            android:fontFamily="@font/montserrat_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recommend"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginTop="@dimen/_minus8sdp"
                            android:textColor="@color/lightgray"
                            android:fontFamily="@font/montserrat_light" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_gravity="end|bottom"
                        android:background="@color/yellow"/>

                </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvRecommendedBudge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:elevation="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@drawable/circle_batch_bg"/>

        </RelativeLayout>

    </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_for_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_below="@+id/layoutData"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_me"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:id="@+id/tv_for_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/lightgray"
                        android:fontFamily="@font/montserrat_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_of_specialtys"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:id="@+id/tv_for_aofs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/lightgray"
                        android:fontFamily="@font/montserrat_light" />

                        <TextView
                            android:id="@+id/tvBusDes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/darkgray"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_regular"/>

                        <TextView
                            android:id="@+id/tv_for_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/lightgray"
                            android:fontFamily="@font/montserrat_light" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:cardCornerRadius="@dimen/_45sdp"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/_3sdp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:visibility="visible"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_60sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_company_logo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/user"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
