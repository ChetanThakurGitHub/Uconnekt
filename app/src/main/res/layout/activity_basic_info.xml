<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    tools:context="com.uconnekt.ui.employer.activity.BasicInfoActivity">

    <include layout="@layout/actionbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_of_specialtys"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tv_for_aofs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/_12sdp"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/lightgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tv_for_value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:visibility="gone"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/tv_for_value2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/tv_for_value3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/lightgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strength"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tv_for_strength1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:visibility="gone"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/tv_for_strength2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:textColorHint="@color/lightgray"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/tv_for_strength3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/darkgray"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/lightgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tv_for_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_light"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/darkgray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/lightgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_me"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tv_for_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_light"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/darkgray" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
